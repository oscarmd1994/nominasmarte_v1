<div class="container col-md-12">
    <form method="post" enctype="multipart/form-data" class="row">
        <div class="col-md-6 mt-4">
            <div class="card shadow rounded border-left-primary border-right-primary">
                <div class="card-body">

                    <h5 class="card-title text-center">
                        <i class="fas fa-file-excel text-success"></i> Selecciona tu EXCEL .xlsx
                    </h5>
                    <a id="btnDownLoadCM" class="text-decoration-none btn btn-info btn-sm font-labels" href="~/Content/FilesCargaMasivaIncidencias/FormatoDeIncidencias/Layout_Carga_Incidencias.xlsx" download target="_blank">
                        <i class="fas fa-file-download fa-lg text-white"></i>
                    </a>
                    <hr />
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group row">
                                <label for="file-type" class="col-8"><i class="far fa-flag col-ico"></i>&nbsp;&nbsp;&nbsp; Selecciona el tipo de archivo para carga </label>
                                <select class="custom-select small custom-select-sm col-4" id="file-type">
                                    <option class="small selected" value="incidencias"> Incidencias</option>
                                    <option class="small" value="ausentismos"> Ausentismos </option>
                                    <option class="small" value="créditos"> Créditos Infonavit </option>
                                    <option class="small" value="pensiones"> Pensión Alimenticia </option>
                                    <option class="small" value="vacaciones"> Vacaciones </option>
                                </select>
                            </div>
                            <div class="form-group row justify-content-between">
                                <label for="file-up"> <i class="fas fa-search mr-2 col-ico col-4"></i> Buscar </label>
                                <input id="file-toup" type="file" accept="application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet" class="form-control-sm form-control-file col-8" />
                            </div>
                            <hr />
                            <div class="form-group mt-4 text-center">
                                <button class="btn btn-sm btn-outline-primary" id="btnCargaMasiva" type="button" onclick="beforeValidarFile();">
                                    <i class="fas fa-check-circle mr-2"></i> Cargar archivo
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div id="results-file-upload-up" class="d-none col-md-10 offset-1"></div>
                    </div>
                    <div class="col-md-12 offset-1 mx-auto collapse" id="collapse-validation-cm">
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 mt-4 rounded">
            <div class="bg-white shadow rounded border-left-primary border-right-primary p-3 font-labels" data-spy="scroll">
                <div class="h6 mt-1 text-primary font-weight-bold text-center">Cargas del Periodo</div>
                <table class="table table-sm font-labels" id="tabCargasMasivas">
                    <thead class="font-labels">
                        <tr>
                            <th scope="col"> Tabla </th>
                            <th scope="col"> Folio </th>
                            <th scope="col"> Referencia </th>
                            <th scope="col"> Registros </th>
                            <th scope="col"> Acciones </th>
                        </tr>
                    </thead>
                    <tbody id="tabCargasMasivasDetalle" class="font-labels">
                    </tbody>
                </table>
            </div>
        </div>
    </form>
</div>
<!-- Modal cancelar carga -->
<div class="modal fade" id="staticBackdrop" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-left-primary border-right-primary">
            <div class="modal-header">
                <h5 class="modal-title text-danger font-weight-bold" id="staticBackdropLabel"><i class="far fa-trash-alt"></i> Cancelar carga</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body row">
                <label class="h5 font-weight-bold col-md-12 text-center">Valida que sea la información correcta</label>
                <div class="col-md-9 form-group">
                    <label class="font-labels font-weight-bold">Tipo de carga</label>
                    <input type="text" class="form-control form-control-lg" id="cm_tabla" readonly/>
                </div>
                <div class="col-md-3 form-group">
                    <label class="font-labels font-weight-bold">Registros</label>
                    <input type="text" class="form-control form-control-lg" id="cm_registros" readonly/>
                </div>
                <div class="col-md-4 form-group">
                    <label class="font-labels font-weight-bold">Fecha de carga</label>
                    <input type="text" class="form-control form-control-lg" id="cm_fecha" readonly/>
                </div>
                <div class="col-md-4 form-group">
                    <label class="font-labels font-weight-bold">Hora</label>
                    <input type="text" class="form-control form-control-lg" id="cm_hora" readonly />
                </div>
                <div class="col-md-4 form-group">
                    <label class="font-labels font-weight-bold">Usuario</label>
                    <input type="text" class="form-control form-control-lg" id="cm_usuario" readonly/>
                </div>
                <div class="col-md-12 form-group text-center">
                    <label class="text-danger font-weight-bold">
                        Las cargas eliminadas no podran recuperarse una vez confirmada la acción
                    </label>
                </div>
                <input type="hidden" id="cm_referencia" value="" />
            </div>
            <div class="modal-footer">
                <div class="btn btn-sm btn-danger btn-icon-split" data-dismiss="modal">
                    <span class="icon"><i class="fas fa-times"></i></span>
                    <span class="text">Cerrar</span>
                </div>
                <div class="btn btn-sm btn-primary btn-icon-split" data-dismiss="modal" onclick="cancelarCargaMasiva();">
                    <span class="icon"><i class="fas fa-check"></i></span>
                    <span class="text">Confirmar</span>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/main/cargamasiva.js?n=0.5"></script>