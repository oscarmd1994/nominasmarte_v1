<body>
    <div class="container bg-white">
        @*cuerpo de pantalla*@

        <div class="row mt-4 border-left-primary p-3 rounded shadow border-right-primary">
            <div id="div-most-alert-data-gen" class="col-md-8 offset-2"></div>
            <div class="col-md-6">
                <div class="text-left">
                    <h6 class="col-ico font-nav-child">
                        <b>
                            <i class="fas fa-circle fa-sm mr-ico-05"></i>
                            Emision de Recibos
                        </b>
                    </h6>
                </div>
            </div>
            <div class="col-md-12">
                <hr />
            </div>
            <div class="col-md-6">
       
                <div class="form-group row">
                    <label for="apemat" class="col-sm-4 col-form-label font-labels" id="label-matern">
                        Catalogo Empresas:
                    </label>
                    <div class="col-sm-8">
                        <div style='float: left;' id="DropEmpresa"></div>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="sex" class="col-sm-4 col-form-label font-labels" id="label-genero">
                        Seleccion de empresas:
                    </label>
                    <div class="col-sm-4">
                        <textarea placeholder="Muestra Empresas" id="TextSelecEmpre" class="form-control form-control-sm text-capitalize" rows="3"></textarea>
                    </div>
                    @*<div class="col-sm-4">
                        <label class="col-sm-8 col-form-label font-labels"><input type="checkbox" id="CheckEmpresa"> Selecciona todas las Empresas</label>
                    </div>*@
                </div>
               
                <div class="form-group row">
                    <label for="sex" class="col-sm-4 col-form-label font-labels" id="label-genero">
                        año de Procesamiento:
                    </label>
                    <div class="col-sm-8">
                        <input placeholder="Año de Procesamiento" title="Año de Procesamiento" type="number" id="TextBAnioProce" min="1900" max="2060" class="form-control form-control-sm" />
                    </div>
                </div>
                <div class="form-group row">
                    <label for="TotalEmple" class="col-sm-4 col-form-label font-labels" id="laTotalEmple">
                        Total de Empleados:
                    </label>
                    <div class="col-sm-8">
                        <input placeholder="Total de Empleados" title="Total Empleados" type="text" id="TextBTotalEmple" class="form-control form-control-sm" />
                    </div>
                </div>
                
            </div>
            <div class="col-md-6">
                <div class="form-group row">
                    <label for="TotalEmple" class="col-sm-3 col-form-label font-labels" id="laTotalEmple">
                        Tipo de Recibo:
                    </label>
                    <div class="col-sm-8">
                        <select placeholder="Tipo de Recibo" tp-select="Tipo de Recibo" class="form-control form-control-sm" id="DroTipoRecibo">
                            <option value="0">Selecciona</option>
                            <option value="1">Recibo Simple</option>
                            <option value="2">Recibo Fiscal</option>
                            <option value="3">Recibo 2</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="laTipoPerido" class="col-sm-3 col-form-label font-labels" id="laTipoPerido">
                        Tipo de Periodo:
                    </label>
                    <div class="col-sm-8">
                        <select placeholder="Tipo de Periodo" tp-select="Tipo de Periodo" class="form-control form-control-sm" id="DroTipoPeriodo">
                            <option value="0">Selecciona</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="Laperidod" class="col-sm-3 col-form-label font-labels" id="laperiodo">
                        Periodo:
                    </label>
                    <div class="col-sm-8">
                        <select placeholder="Periodo" tp-select="Periodo" class="form-control form-control-sm" id="DropPerido">
                            <option value="0">Selecciona</option>
                        </select>
                    </div>
                </div>

                <div class="form-group row">
                    <div id="jqxLoader"></div>
                </div>
                <div class="form-group row" style="margin-left:30%">
                    <div id="jqxLoader2"></div>
                </div>

              
                <div class="form-group row" style="margin-left:45%; margin-top:-25px">

                    <div class="col-md-9">
                        <button id="btnEnviCorre" class="btn btn-outline-primary btn-sm btn-block mt-2 rounded shadow btn-priority" type="button" value="0">
                            <i class="fa fa-envelope-o"></i> Envio de Correos
                        </button>
                    </div>
                </div>
               
            </div>
            <div class="col-md-12">
                <div class="table-responsive" style="text-align:center; margin-left:5%">
                    <div id="TbEjeSend" class="table-responsive"></div>
                </div>
            </div>

        </div>

  
    </div>
</body>
