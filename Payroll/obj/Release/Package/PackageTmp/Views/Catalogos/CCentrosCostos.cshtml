<div class="container col-md-10 bg-white shadow shadow-lg font-labels p-4">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <a class="nav-link active h6" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true"><i class="fas fa-list-ul"></i> Centros de Costos</a>
        </li>
    </ul>
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
            <table class="table table-sm mt-2 " id="table-centros-costos">
                <thead>
                    <tr>
                        <th class="">ID</th>
                        <th class="">Nombre Empresa</th>
                        <th class="">Acciones</th>
                    </tr>
                </thead>
                <tbody id="bodytab-centroscostos">
                </tbody>
            </table>
        </div>
    </div>
</div>
@* modal nuevo centro de costos  *@
<div class="modal" tabindex="-1" role="dialog" id="modal-nuevo-centrocostos">
    <div class="modal-dialog modal-lg">
        <div class="modal-content border-left-primary">
            <div class="modal-header">
                <h5 class="modal-title">Nuevo Centro de Costos</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body font-labels">
                <form id="frmnuevocentrocostos" class="row">
                    <div class="form-group col-md-6">
                        <label class="">Empresa</label>
                        <input class="form-control form-control-sm" type="text" id="newempresa" required placeholder="" readonly/>
                    </div>
                    <div class="form-group col-md-6">
                        <label class="">Centro Costo</label>
                        <input class="form-control form-control-sm" type="text" id="newnombre" required placeholder="" />
                    </div>
                    <div class="form-group col-md-6">
                        <label class="">Descripción</label>
                        <input class="form-control form-control-sm" type="text" id="newdescripcion" required placeholder="" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button"  class="btn btn-secondary btn-sm btn-icon-split" data-dismiss="modal">
                    <span class="icon"><i class="fas fa-times"></i></span>
                    <span class="text">Cerrar</span>
                </button>
                <button type="button" id="btnsavecentrocosto" class="btn btn-primary btn-sm">
                    <span class="icon"><i class="fas fa-save"></i></span>
                    <span class="text">Guardar</span>
                </button>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/Catalogos/ModuloCatalogos.js?n=1"></script>
