<div class="container bg-white pt-2 font-labels shadow shadow-lg border-left-primary border-right-primary rounded">
  <div class="border-bottom border-secondary pt-4 pb-2 font-weight-bold d-flex justify-content-between"><div>Registrar Incidencia a empleado : </div><strong class="font-button" id="EmpDes"></strong><div class="btn btn-info btn-sm font-labels" id="btn-cambiar-empleado" title="Cambia de usuario"><i class="fas fa-users"></i></div></div>
  <div class="form-group">
    <div class="form-group col-md-12 pb-3">
      <div class="row aling-items-center form-group font-button">
        <div class="col"></div>
        <a class="btn btn-sm btn-primary mt-3 mb-auto btn-priority" id="btnNewIncidencia" href="#" onclick="mostrarFormNewIncidencias();"> <i class="fas fa-plus"></i> Nueva Incidencia </a>

      </div>
      <div class="form-group col-md-12">
        <table class="table table-sm">
          <thead class="">
            <tr>
              <th>Concepto</th>
              <th class='text-center'>Renglon</th>
              <th class='text-center'>Cantidad</th>
              <th class='text-center'>Días</th>
              <th class='text-center'>Plazos</th>
              <th class='text-center'>Pagos Restantes</th>
              <th class='text-center'>Leyenda</th>
              <th class='text-center'>Fecha</th>
              <th class='text-center'>Periodo</th>
              <th class='text-center'>Acciones</th>
            </tr>
          </thead>
          <tbody id="tabIncidenciasBody">
          </tbody>
        </table>
      </div>


      <div class="collapse show" id="collapseNewIncidencia">

        <div class="form-group col-md-12">
          <div class="collapse " id="incidenciasCollapse">
            <form action="#" id="frmIncidencias" class="font-labels">
              <div class="font-labels font-weight-bold pb-3">Nueva Incidencia</div>
              <div class="form-group row">
                <div class="form-group col-md-6">
                  <label>Concepto *</label>
                  <input type="text" class="form-control form-control-sm" autocomplete="off" id="txtsearchtipoincidencia" required>
                  <div id="resulttipoincidencia"></div>
                </div>
                <div class="form-group col-md-6">
                  <label>Renglón *</label>
                  <input type="text" name="inRenglon" id="inRenglon" class="form-control form-control-sm disabled" readonly placeholder="#" required />
                </div>
                <div class="form-group col-md-12">
                  <div class="row">
                    <div class="form-group col-md-4">
                      <label id="lblCantidad">Monto o cantidad *</label>
                      <input type="text" name="inCantidad" id="inCantidad" class="form-control form-control-sm" placeholder="00.0" required />
                    </div>
                    <div class="form-group col-md-4">
                      <label id="lblDias">Días *</label>
                      <input type="text" name="inDias" id="inDias" class="form-control form-control-sm" placeholder="00" required />
                    </div>
                    <div class="form-group col-md-4">
                      <label id="lblDiashrs">Dias Hrs <small class="text-black-50">(Campo informativo)</small></label>
                      <input type="text" name="inDiashrs" id="inDiashrs" class="form-control form-control-sm input-number" value="0" placeholder="00" />
                    </div>
                  </div>
                </div>
                <div class="form-group col-md-6">
                  <label>Plazos *</label>
                  <input type="text" name="inPlazos" id="inPlazos" class="form-control form-control-sm" placeholder="No. de periodos " value="1" />
                </div>
                <div class="form-group col-md-6">
                  <label>Leyenda</label>
                  <input type="text" name="inLeyenda" id="inLeyenda" class="form-control form-control-sm" />
                </div>
                <div class="form-group col-md-6">
                  <label>Referencia</label>
                  <input type="text" name="inReferencia" id="inReferencia" class="form-control form-control-sm" />
                </div>
                <div class="form-group col-md-6">
                  <label>Fecha de Aplicacion *</label>
                  <input type="date" name="inFechaA" id="inFechaA" class="form-control form-control-sm" required />
                </div>
                <div class="form-group col-md-12">
                  <label class="text-muted" style="font-size:smaller;">* Campos obligatorios</label>
                </div>
                <div class="d-flex justify-content-end col-md-12">
                  <div class="btn btn-primary btn-sm btn-icon-split rounded m-1 btn-priority" title="Guardar" id="btnSaveIncidencias">
                    <span class="icon">
                      <i class="fas fa-save"></i>
                    </span>
                    <span class="text">
                      Guardar
                    </span>
                  </div>
                  <div class="btn btn-warning rounded btn-sm m-1 btn-icon-split btn-priority" title="Limpiar Formulario" id="btnClearIncidencias">
                    <span class="icon">
                      <i class="far fa-trash-alt"></i>
                    </span>
                    <span class="text">
                      Limpiar
                    </span>
                  </div>
                  <div class="btn btn-danger btn-sm rounded m-1 invisible btn-priority" title="Editar Registro" id="btnEditIncidencias"><i class="far fa-edit"></i></div>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
@* MODAL DE LIVE SEARCH EMPLEADO *@
<!-- Modal -->
<div class="modal fade" id="modalLiveSearchEmpleado" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-scrollable" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title text-dark font-weight-bold" id="staticBackdropLabel"> <i class="fas fa-search"></i> Buscar empleado <span id="politicas-modal-title" class="politicas-modal-title"></span></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="search-box col-md-12">
            <label for="inputSearchEmpleados" class="font-labels">Escribe el nombre del empleado que buscas</label>
            <input type="text" name="inputSearchEmpleados" id="inputSearchEmpleados" placeholder="Escriba el nombre del empleado" class=" form-control" autocomplete="off" />
            <div id="resultSearchEmpleados" name="resultSearchEmpleados" class="list-group"></div>
          </div>
          <div class="col-lg-3 col-md-3 col-3 pb-3">
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!--
    Modal
    EDITAR INCIDENCIA
-->
<div class="modal fade" id="editIncidencia" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="editIncidenciaLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content border-left-primary border-right-primary">
      <div class="modal-header">
        <h5 class="modal-title text-primary font-weight-bold" id="editIncidenciaLabel">Modificar Incidencia</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span class="text-danger" aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="frmEditIncidencia" class="form-group col-md-12 font-labels row">
          <div class="col-md-6 mb-3">
            <label class="col-2"> Concepto </label>
            <select id="edConcepto" class="col custom-select custom-select-sm">
            </select>
          </div>
          <div class="form-group col-md-6 mb-3">
            <label class="col-2"> Renglón </label>
            <input class="col form-control form-control-sm" id="edRenglon" type="text" value="" />
          </div>
          <div class="form-group col-md-12">
            <div class="row">
              <div class="form-group col-md-6">
                <label class="">Monto o Cantidad <small>*</small> </label>
                <input class="form-control form-control-sm" id="edCantidad" onkeyup="validaCantidad();" type="text" value="" placeholder="00.0" />
                <small class="text-black-50 col-md-12 mb-0 pb-0"> <strong>*</strong> Esta es la cantidad total y se dividira entre los plazos</small>
                <input id="actualCantidad" type="hidden" value="" />
              </div>
              <div class="form-group col-md-3">
                <label class=""> Días </label>
                <input class="form-control form-control-sm" id="edDias" type="text" value="" placeholder="00.0" />
                <input id="actualDias" type="hidden" value="" />
              </div>
              <div class="form-group col-md-3">
                <label id="lbledDiashrs">Dias Hrs <small class="text-black-50">(Campo informativo)</small></label>
                <input type="text" name="edDiashrs" id="edDiashrs" class="form-control form-control-sm input-number" placeholder="00" />
              </div>
            </div>
          </div>
          <div class="form-group col-md-6">
            <label class="col-4"> Saldo </label>
            <input class="col form-control form-control-sm" id="edSaldo" onkeyup="validaCantidad();" type="text" value="" />
            <input id="actualSaldo" type="hidden" value="" />
          </div>

          <div class="form-group col-md-6">
            <label class="col-4"> Plazos </label>
            <input class="col form-control form-control-sm input-number" id="edPlazos" onkeyup="validaPlazos();" type="text" value="" />
            <input id="actualPlazos" type="hidden" value="" />
          </div>
          <div class="form-group col-md-6">
            <label class="col-4"> Pagos Restantes </label>
            <input class="col form-control form-control-sm input-number" id="edPagosRestantes" onkeyup="validaPlazos();" type="text" value="" />
            <input id="actualPagosrestantes" type="hidden" value="" />
          </div>
          <div class="form-group col-md-6">
            <label class="col-4"> Leyenda </label>
            <input class="col form-control form-control-sm" id="edLeyenda" type="text" value="" />
          </div>
          <div class="form-group col-md-6">
            <label class="col-4"> Referencia </label>
            <input class="col form-control form-control-sm" id="edReferencia" type="text" value="" />
          </div>
          <div class="form-group col-md-6">
            <label class="col-5"> Fecha de Aplicación </label>
            <input class="col form-control form-control-sm" id="edFechaAplicacion" value="" type="date" />
          </div>
          <div class="col-md-12 mt-4 mb-1">
            <div id="validactc" class="col-md-12 py-0"></div>
            <div id="validactp" class="col-md-12 py-0"></div>
            <div id="validc" class="col-md-12 py-0"></div>
            <div id="validp" class="col-md-12 py-0"></div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="font-labels btn btn-danger btn-priority btn-sm btn-icon-split" data-dismiss="modal">
          <span class="icon"><i class="fas fa-times"></i></span>
          <span class="text"> Cerrar </span>
        </button>
        <button type="button" onclick="updateIncidencia();" class="font-labels btn btn-success btn-priority btn-sm btn-icon-split">
          <span class="icon"><i class="fas fa-upload"></i></span>
          <span class="text"> Actualizar </span>
        </button>
      </div>
    </div>
  </div>
</div>

<script src="~/Scripts/main/Incidencias.js"></script>