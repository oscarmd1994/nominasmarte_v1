                <div class="col-md-12 dropdown-divider"></div>
                <div class="col-md-6 form-group">
                    <label>Empresa</label>
                    <select class="custom-select custom-select-sm" id="inEmpresa"></select>
                </div>
                <div class="col-md-6 form-group">
                    <label>Nombre Puesto</label>
                    <input class="form-control" type="text" id="inSearchPuesto" value="" placeholder="Nombre o Codigo del puesto" />
                </div>
                <div class="col-md-12" id="resultPuesto"></div>

            </div>
            <div class="col-md-12 shadow-lg p-3 mb-5 bg-white rounded row">
                <div class="col-md-12 h5 text-center"><span class="badge badge-dark">Descripcion de los puestos</span></div>
                <div class="col-md-12 dropdown-divider"></div>
                <form id="formpuestos" class="col-md-12 row">
                    <div class="col-md-6 form-group">
                        <label>Puesto Codigo</label>
                        <input class="form-control" type="text" value="" id="inp-0" readonly />
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Nombre Puesto</label>
                        <input class="form-control" type="text" value="" id="inp-1" />
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Descripción Puesto</label>
                        <input class="form-control" type="text" value="" id="inp-2" />
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Profesión</label>
                        <input class="form-control" type="text" value="" id="inp-3" />
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Clasificación</label>
                        <input class="form-control" type="text" value="" id="inp-4" />
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Nivel Jerarquico</label>
                        <input class="form-control" type="text" value="" id="inp-5" />
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Tabulador</label>
                        <input class="form-control" type="text" value="" id="inp-6" />
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Fecha Alta</label>
                        <input class="form-control" type="text" value="" id="inp-7" />
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Performance Manager</label>
                        <input class="form-control" type="text" value="" id="inp-8" />
                    </div>
                    <div class="col-md-12 form-group invisible">
                        <div class="btn btn-info btn-sm btn-icon-split">
                            <span class="icon text-white-50">
                                <i class="fas fa-save" aria-hidden="true"></i>
                            </span>
                            <span class="text">
                                Actualizar
                            </span>
                        </div>
                        <div class="btn btn-danger btn-sm btn-icon-split">
                            <span class="icon text-white-50">
                                <i class="far fa-trash-alt" aria-hidden="true"></i>
                            </span>
                            <span class="text">
                                Eliminar
                            </span>
                        </div>
                        <div class="btn btn-warning btn-sm btn-icon-split">
                            <span class="icon text-white-50">
                                <i class="fas fa-undo" aria-hidden="true"></i>
                            </span>
                            <span class="text">
                                Limpiar formulario
                            </span>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
