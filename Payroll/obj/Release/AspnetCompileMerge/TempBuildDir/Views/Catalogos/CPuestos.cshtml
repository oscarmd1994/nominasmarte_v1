                    <tr>
                        <th colspan="3" scope="col">Lista de empresas</th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody id="bodytab-puestos">
                </tbody>
            </table>
        </div>

        <div class="col-md-6 p-4 font-labels">
