<body class="bdefault">
    <div class="container bg-white">
        @*Botones Flotantes*@

        <div class="container-fluid">

            <div class="row mt-4 border-left-primary p-3 rounded shadow border-right-primary">
                <div id="div-most-alert-data-gen" class="col-md-10 offset-2"></div>
                <div class="col-md-6">
                    <div class="text-left">
                        <h6 class="col-ico font-nav-child">
                            <b>
                                <i class="fas fa-circle fa-sm mr-ico-05"></i>
                                Renglones
                            </b>
                        </h6>
                    </div>
                </div>
                <div class="col-md-12">
                    <hr />
                </div>
                <div class="row mt-4">
                    <div class="form-group row" style="margin-left:2%">
                        <label for="LaEmpresa" class="col-sm-3 col-form-label font-labels" id="LaEmpresa2">
                            Empresa:
                        </label>
                        <div class="col-sm-8">
                            <select placeholder="Empresa" tp-select="Empresa" class="form-control form-control-sm" id="DropEmpresa2">
                            </select>
                        </div>
                    </div>
                    <div>
                        <center>
                            <div id="dTabCrenglones" style="margin-top:5%; margin-left:15%"> </div>
                        </center>
                    </div>
                </div>
            </div>


            <!-- Pantalla de Actualizar Renglon -->

            <div class="modal fade" data-backdrop="static" id="AgregaRenglon" tabindex="-1" role="dialog" aria-labelledby="AgregaRenglon" aria-hidden="true">
                <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable" role="document">
                    <div class="modal-content">
                        <div>
                            <div class="modal-header" style="visibility:visible">
                                <h5 class="modal-title col-lg-10" id="AgrgarDefinicionlabel">
                                    <i class="fas fa-file-contract mr-2"></i> <label for="LaIdRenglon" class="col-sm-10 col-form-label font-labels" id="Latitu">
                                    </label>
                                </h5>
                            </div>
                        </div>
                        <div class="modal-body">
                            <div class="container-fluid">
                                <div class="row mt-4">
                                    <div class="col-md-6">
                                        <div class="form-group row" style="margin-left:2%">
                                            <label for="LaIdRenglon" class="col-sm-5 col-form-label font-labels" id="LaIdRenglon">
                                                Id Renglón:
                                            </label>
                                            <div class="col-sm-5">
                                                <input placeholder="Id Renglón" tvvisible="false" type="text" id="TxIdRenglon" class="form-control form-control-sm text-capitalize" />
                                            </div>
                                        </div>
                                        <div class="form-group row" style="margin-left:2%">
                                            <label for="LaNomR" class="col-sm-5 col-form-label font-labels" id="LaNomReng">
                                                Nombre de Renglón:
                                            </label>
                                            <div class="col-sm-5">
                                                <input placeholder="Nombre de Renglón" tvvisible="false" type="text" id="txNomRenglon" class="form-control form-control-sm text-capitalize" />
                                            </div>
                                        </div>

                                    </div>
                                    <div class="col-md-6">


                                        <div class="form-group row" style="margin-left:2%">
                                            <label for="LalisSat" class="col-sm-5 col-form-label font-labels" id="LalisSat">
                                                Id Sat:
                                            </label>
                                            <div class="col-sm-5">
                                                <select placeholder="Id SAT" tp-select="LaCalculo" class="form-control form-control-sm" id="DroplisSat">
                                                    <option value="0">Selecciona</option>
                                                </select>
                                            </div>
                                        </div>


                                        <div class="form-group row" style="margin-left:2%">
                                            <div style='float: left; width: 400px; margin-top: 10px;'>
                                                <div id='ChecCancel' style='margin-left: 10px; float: left;visibility:hidden'>
                                                    <label for="LaCancel" class="col-sm-3 col-form-label font-labels" id="LaCancel">
                                                        Cancelado:
                                                    </label>
                                                </div>
                                                <div id='ChecEspejo' style='margin-left: 10px; float: left;'>
                                                    <label for="LaCancel" class="col-sm-3 col-form-label font-labels" id="LaEspejo">
                                                        Es espejo:
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button data-toggle="modal" data-target="#AgregaRenglon" type="button" class="btn btn-outline-success btn-sm btn-priority" ng id="BtnAgreRe" style="visibility:visible" value=@Session["Consulta"]><i class="fas fa-plus mr-2"></i>Agregar Renglón </button>
                            <button data-toggle="modal" data-target="#AgregaRenglon" type="button" class="btn btn-outline-success btn-sm btn-priority" ng id="BtnActualiza" style="visibility:hidden"><i class="fas fa-plus mr-2"></i>Actualizar Renglón </button>
                            <button type="button" class="btn btn-sm btn-outline-secondary" data-dismiss="modal" id="btnCierra"> <i class="fas fa-times mr-2"></i> Cerrar</button>
                        </div>
                    </div>
                </div>
            </div>

            @*Botones de flotantes*@
            <div>
                <button type="button" data-toggle="modal" data-target="#AgregaRenglon" class="flotante1 btn btn-primary btn-circle shadow btn-priority" title="Agregar Renglón" id="AgregarRenglon" style="visibility:hidden">
                    <i class="fa fa-plus-square-o"></i>
                </button>
                <button type="button" data-toggle="modal" data-target="#AgregaRenglon" class="flotante1 btn btn-primary btn-circle shadow btn-priority" title="Agregar Renglón" id="ActuRenglon" style="visibility:hidden">
                    <i class="fa fa-plus-square-o"></i>
                </button>

            </div>
        </div>
    </div>
</body>
