<div class="container bg-white pt-2 font-labels shadow shadow-lg border-left-primary border-right-primary rounded">
    <div class="border-bottom border-secondary pt-4 pb-2 font-weight-bold d-flex justify-content-between"><div>Registrar Incidencia a empleado : </div><strong class="font-button" id="EmpDes"></strong><div class="btn btn-info btn-sm font-labels" id="btn-cambiar-empleado" title="Cambia de usuario"><i class="fas fa-users"></i></div></div>
    <div class="form-group">
        <div class="form-group col-md-12 row">
            <div class="form-group col-md-5">
                <div class="collapse show" id="incidenciasCollapse">
                    <form action="#" id="frmIncidencias" class="font-labels">
                        <div class="font-labels font-weight-bold pb-3">Nueva Incidencia</div>
                        <div class="form-group row">
                            <div class="form-group col-md-6">
                                <label>Concepto *</label>
                                <select class="custom-select custom-select-sm font-labels" id="inConcepto_incidencia" name="inConcepto_incidencia" required>
                                </select>
                            </div>
                            <div class="form-group col-md-6">
                                <label>Renglón *</label>
                                <input type="text" name="inRenglon" id="inRenglon" class="form-control form-control-sm disabled" readonly placeholder="#" required />
                            </div>
                            <div id="lbloptions" class="col-md-12 text-center">
                            </div>
                            <div id="inflbl" class=""></div>
                            <div class="form-group col-md-6">
                                <label id="lblCantidad">Cantidad *</label>
                                <input type="text" name="inCantidad" id="inCantidad" class="form-control form-control-sm" placeholder="$ 0000.00" />

                            </div>
                            <div class="col-md-12 collapse row text-center " id="collapsefechas">

                                <div class="form-group col-md-6">
                                    <label>Fecha Inicio</label>
                                    <input type="date" name="infinicio" id="infinicio" class="form-control form-control-sm" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label id="lblCantidad">Fecha Final</label>
                                    <input type="date" name="inffinal" id="inffinal" class="form-control form-control-sm" />
                                </div>
                            </div>
                            <div class="form-group col-md-6">
                                <label>Plazos *</label>
                                <input type="text" name="inPlazos" id="inPlazos" class="form-control form-control-sm" placeholder="No. de periodos " />
                            </div>
                            <div class="form-group col-md-6">
                                <label>Leyenda</label>
                                <input type="text" name="inLeyenda" id="inLeyenda" class="form-control form-control-sm" />
                            </div>
                            <div class="form-group col-md-6">
                                <label>Referencia</label>
                                <input type="text" name="inReferencia" id="inReferencia" class="form-control form-control-sm" />
                            </div>
                            <div class="form-group col-md-6">
                                <label>Fecha de Aplicacion *</label>
                                <input type="date" name="inFechaA" id="inFechaA" class="form-control form-control-sm" required />
                            </div>
                            <div class="form-group col-md-12">
                                <label class="text-muted" style="font-size:smaller;">* Campos obligatorios</label>
                            </div>
                            <div class="d-flex justify-content-end col-md-12">
                                <div class="btn btn-primary btn-sm btn-icon-split rounded m-1" title="Guardar" id="btnSaveIncidencias">
                                    <span class="icon">
                                        <i class="fas fa-save"></i>
                                    </span>
                                    <span class="text">
                                        Guardar
                                    </span>
                                </div>
                                <div class="btn btn-warning rounded btn-sm m-1 btn-icon-split" title="Limpiar Formulario" id="btnClearIncidencias">
                                    <span class="icon">
                                        <i class="far fa-trash-alt"></i>
                                    </span>
                                    <span class="text">
                                        Limpiar
                                    </span>
                                </div>
                                <div class="btn btn-danger btn-sm rounded m-1 invisible" title="Editar Registro" id="btnEditIncidencias"><i class="far fa-edit"></i></div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="form-group col-md-7">
                <table class="table table-sm font-labels border-top-0">
                    <thead class="">
                        <tr>
                            <th>Concepto</th>
                            <th class='text-center'>Renglon</th>
                            <th class='text-center'>Cantidad</th>
                            <th class='text-center'>Plazos</th>
                            <th class='text-center'>Leyenda</th>
                            <th class='text-center'>Fecha</th>
                            <th class='text-center'>Periodo</th>
                            <th class='text-center'>Acciones</th>
                        </tr>
                    </thead>
                    <tbody id="tabIncidenciasBody">
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@* MODAL DE LIVE SEARCH EMPLEADO *@
<!-- Modal -->
<div class="modal fade" id="modalLiveSearchEmpleado" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title font-labels" id="staticBackdropLabel">Busca el empleado</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="search-box col-md-12">
                        <label for="inputSearchEmpleados" class="font-labels">Escribe el nombre del empleado que buscas</label>
                        <input type="text" name="inputSearchEmpleados" id="inputSearchEmpleados" placeholder="Escriba el nombre del empleado" class=" form-control" autocomplete="off" />
                        <div id="resultSearchEmpleados" name="resultSearchEmpleados" class="list-group"></div>
                    </div>
                    <div class="col-lg-3 col-md-3 col-3 pb-3">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/main/Incidencias.js?n=1"></script>
